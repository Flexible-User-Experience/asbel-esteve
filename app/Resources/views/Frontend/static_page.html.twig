{% extends "::Frontend/layout.html.twig" %}

{% block meta_keywords %}
    {% spaceless %}
        {% if page.metaKeywords is not null %}
            {{ page.metaKeywords }}
        {% else %}
            {{ parent() }}
        {% endif %}
    {% endspaceless %}
{% endblock %}

{% block meta_description %}
    {% spaceless %}
        {% if page.metaDescription is not null %}
            {{ page.metaDescription }}
        {% else %}
            {{ parent() }}
        {% endif %}
    {% endspaceless %}
{% endblock %}

{% block title %}{{ page.title | capitalize }} Â· {{ parent() }}{% endblock %}

{% block body_class %}container{% endblock %}

{% block body %}
    <div class="row">
        <div class="my-padding col-xs-12">
            <h1>{{ page.title }}</h1>
            <p>{{ page.description | raw }}</p>
        </div>
    </div>
{% endblock %}
