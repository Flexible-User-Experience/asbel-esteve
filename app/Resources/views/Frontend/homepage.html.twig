{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <h1>homepage</h1>
        </div>
    </div>
    <div class="row">
        {% for item in items %}
            {% set col = 'col-xs-' ~ item.bootstrapColumns %}
            <div class="{{ col }}">
                <div class="thumbnail">
                    {#<img src="..." alt="...">#}
                    <div class="caption">
                        <h3>{{ item.title }}</h3>
                        <p>{{ item.year }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block bottom %}
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                {{ form(form) }}
            </div>
        </div>
    </div>
    {{ parent() }}
{% endblock %}
