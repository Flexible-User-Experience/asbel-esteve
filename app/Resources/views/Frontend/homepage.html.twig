{% extends ':Frontend:layout.html.twig' %}

{% block body %}
    {% block body_head_title %}{% endblock %}
    {% set colsCounter = 0 %}
    {% for item in items %}
        {% if colsCounter == 0 %}
        <div class="row">
            <div class="row-height">
        {% endif %}
                {% set col = 'col-xs-' ~ item.bootstrapColumns %}
                <div class="{{ col }} col-height right-bordered my-padding{% if not loop.last %} bottom-bordered{% endif %}">
                    <div class="ad">
                        {% if item.imageName %}
                            <img class="img-responsive" src="{{ vich_uploader_asset(item, 'imageFile') | imagine_filter('700x400') }}" alt="{{ item.title }} thumbnail">
                        {% endif %}
                        <h3 class="title"><a href="{{ path('app_content', { slug: item.slug}) }}">{{ item.title }}</a></h3>
                        <h5>{{ item.categories | join(', ') }}</h5>
                        <h5 class="no-gap-bottom">{{ item.year }}</h5>
                    </div>
                </div>
        {% set colsCounter = colsCounter + item.bootstrapColumns %}
        {% if colsCounter >= 12 %}
            {% set colsCounter = 0 %}
                </div>
            </div>
        {% endif %}
    {% endfor %}
{% endblock %}
