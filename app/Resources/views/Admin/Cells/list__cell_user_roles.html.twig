{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field%}
    {% spaceless %}
        <div>
            {% if object.roles %}
                {% for role in object.roles %}
                    {% if role == 'ROLE_CMS' %}
                        {% set status = 'warning' %}
                        {% set text = 'editor' %}
                        <span class="label label-{{ status }}" style="margin-right:10px">{{ text }}</span>
                    {% elseif role == 'ROLE_ADMIN' %}
                        {% set status = 'primary' %}
                        {% set text = 'admin' %}
                        <span class="label label-{{ status }}" style="margin-right:10px">{{ text }}</span>
                    {% elseif role == 'ROLE_SUPER_ADMIN' %}
                        {% set status = 'danger' %}
                        {% set text = 'super admin' %}
                        <span class="label label-{{ status }}" style="margin-right:10px">{{ text }}</span>
                    {% endif %}
                {% endfor %}
            {% else %}
                ---
            {% endif %}
        </div>
    {% endspaceless %}
{% endblock %}
